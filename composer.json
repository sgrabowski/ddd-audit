{
    "name": "audit/audit-system",
    "type": "project",
    "description": "Quality Audit Evaluation System",
    "require": {
        "php": ">=8.3",
        "symfony/console": "^7.1",
        "symfony/dotenv": "^7.1",
        "symfony/flex": "^2.4",
        "symfony/framework-bundle": "^7.1",
        "symfony/runtime": "^7.1",
        "symfony/yaml": "^7.1",
        "symfony/validator": "^7.1",
        "symfony/uid": "^7.1",
        "doctrine/doctrine-bundle": "^2.13",
        "doctrine/doctrine-migrations-bundle": "^3.4",
        "doctrine/orm": "^3.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^2.0",
        "phpstan/phpstan-strict-rules": "^2.0",
        "friendsofphp/php-cs-fixer": "^3.40"
    },
    "autoload": {
        "psr-4": {
            "Audit\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Audit\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "7.1.*"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse src tests --level=8",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "cs-fix": "php-cs-fixer fix",
        "quality": [
            "@phpstan",
            "@cs-check",
            "@test"
        ]
    }
}
